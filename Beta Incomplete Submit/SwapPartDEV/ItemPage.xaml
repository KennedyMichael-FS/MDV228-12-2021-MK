<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SwapPartDEV.ItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid VerticalOptions="Start" Padding="10,10,10,10" BackgroundColor="OrangeRed">
                <Button x:Name="backButton" Text="Back" HorizontalOptions="Start"/>
                <Image HorizontalOptions="Center" Source="https://i.ibb.co/ySKWRCN/SwapPart.png"/>
                <Button Text="Cart" HorizontalOptions="End"/> 
            </Grid>
            <Frame BackgroundColor="White" VerticalOptions="CenterAndExpand">
                <StackLayout>
                    <Image Source="https://i.ibb.co/qRYk4mY/Processor.png" HorizontalOptions="Center"/>
                    <Label Padding="10,10,10,10" FontSize="36" HorizontalOptions="Center" Text="Catalog Item"/>
                    <Label Padding="10,10,10,10" FontSize="20" HorizontalOptions="Center" Text="A short and sweet description of the item. Or it can be a long description, depending on how complex the component or part really is."/>
                    <Button Text="Add to Trades" HorizontalOptions="Center" VerticalOptions="End"/>
                    </StackLayout>
                </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
